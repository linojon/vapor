= form_for @comment do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :body
    %br
    = f.text_area :body
  %p
    = f.label :author
    %br
    = f.text_field :author
  %p
    = f.label :status
    %br
    = f.text_field :status
  %p
    = f.label :anonymous
    %br
    = f.check_box :anonymous
  %p
    = f.label :posting_id
    %br
    = f.text_field :posting_id
  %p
    = f.submit
